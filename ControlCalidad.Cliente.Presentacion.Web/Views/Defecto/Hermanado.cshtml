@using ControlCalidad.Cliente.Presentacion.Web.Models.Defecto
@model HermanadoViewModel
@{
    ViewBag.Title = "Hermanado";
    Layout = "~/Views/Shared/_PrincipalSitie.cshtml";
}

<div class="row">
    <div class="col-lg-8 col-md-10 col-sm-12 col-xs-12">
        <h3>Hermanado de OP - Numero: @Model.OpDto.Numero</h3>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-condensed table-hover">
                <thead>
                <th scope="col">Fecha</th>
                <th scope="col">Hora</th>
                <th scope="col">Inicio</th>
                <th scope="col">Fin</th>
                <th scope="col">Turno</th>
                <th scope="col">Cantidad</th>
                <th scope="col">Acciones</th>
                </thead>

                <tbody>
                    @foreach (var item in Model.OpDto.ListaDeHorario)
                    {
                    <tr>
                        <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                        <td>@item.Id</td>
                        <td>@item.HoraInicio</td>
                        <td>@item.HoraFin</td>
                        <td>@item.TurnoHorario.nombre</td>
                        <td>@item.ParesDePrimera.Cantidad</td>
                        <td>-.-</td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
