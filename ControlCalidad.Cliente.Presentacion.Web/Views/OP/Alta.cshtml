@using ControlCalidad.Cliente.Presentacion.Web.Models.OP
@model AltaViewModel
@{
    ViewBag.Title = "Alta";
    Layout = "~/Views/Shared/_PrincipalSitie.cshtml";
}

<style media="screen">
    #uploadForm,
    #imagePreview {
        width: 720px;
        margin: 0 auto;
    }

    img {
        max-width: 250px;
        height: auto;
    }
</style>

<div class="row">
    <div class="col-lg-8 col-md-10 col-sm-12 col-xs-12">
        <h3>NUEVA ORDEN DE PRODUCCION - Numero: @Model.OrdenProduccion.Numero</h3>

        @using (Html.BeginForm("Alta", "OP", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label class="col-md-4 control-label" for="LineaTrabajo">Linea de Trabajo</label>
                <select name="nSelectLinea" id="idSelectLinea" class="form-control">
                    @foreach (var item in Model.LineasDtos)
                    {
                        <option value="@item.Numero">@item.Descripcion</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label" for="Modelo">Modelo</label>
                <select name="nSelectModelo" id="idSelectModelo" class="form-control">
                    @foreach (var item in Model.ModelosDtos)
                    {
                        <option value="@item.Sku">SKU: @item.Sku - @item.Denominacion</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label" for="Color">Color</label>
                <select name="nSelectColor" id="idSelectColor" class="form-control">
                    @foreach (var item in Model.ColoresDtos)
                    {
                    <option value="@item.Codigo">@item.Descripcion</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label class="col-md-2 control-label" for="Txt">Estado</label>
                <input class="form-control" type="text" value="INICIADO" disabled>
            </div>


            <div class="form-group">
                <button class="btn btn-primary" type="submit">Guardar</button>
                <a class="btn btn-secondary" href="/OP/Index">Cancelar</a>
            </div>

        }
    </div>
</div>

